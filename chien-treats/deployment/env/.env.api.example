# API Environment Variables
# Copy to /srv/sites/chienstreats/shared/.env.api

# Application
APP_ENV=production
APP_PORT=3102
APP_BASE_URL=https://chienstreats.com
FRONTEND_ORIGIN=https://chienstreats.com

# Database
DATABASE_URL=postgresql://chiens_app:CHANGEME@localhost:5432/chiens_prod?schema=public

# Redis (optional but recommended)
REDIS_URL=redis://localhost:6379/0

# JWT Secrets (CHANGE THESE!)
JWT_SECRET=please-generate-a-secure-32-char-minimum-secret-here
JWT_EXPIRES_IN=1h
REFRESH_EXPIRES_IN=30d

# Stripe (get from https://dashboard.stripe.com/apikeys)
STRIPE_PUBLIC_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# File uploads
UPLOAD_DIR=/srv/sites/chienstreats/shared/uploads
MAX_UPLOAD_MB=5

# Rate limiting
RATE_LIMIT_WINDOW_SEC=300
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_WINDOW_SEC=900
RATE_LIMIT_AUTH_MAX=20

# Monitoring
METRICS_ENABLED=true

# Email (configure SMTP or use a service like SendGrid, Postmark, etc.)
# Option 1: SMTP
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=SG.your-sendgrid-api-key

# Option 2: File output for testing (emails saved to disk)
EMAIL_OUTPUT_DIR=/srv/sites/chienstreats/shared/logs/emails

# From address
EMAIL_FROM=noreply@chienstreats.com
EMAIL_FROM_NAME=Chien's Treats
